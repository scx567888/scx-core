<?xml version="1.0" encoding="UTF-8" ?>
<scx-config>
    <!-- scx框架核心配置文件 -->
    <!-- 有关路径的参数 若需要以项目运行位置相对根目录, 请使用 AppRoot:xxx 绝对路径请直接使用绝对路径参数 -->
    <scx>
        <!-- 服务器监听端口号 -->
        <port>8080</port>
        <!-- 日志配置 -->
        <log>
            <!-- 日志类型 取值为三种 console (仅在控制台) , file (仅在文件) , both (两者都有) -->
            <out-type>both</out-type>
            <!-- 此处为了简化使用成本仅配置日志输出目录 实际规则为:根据当前事件(精确到天) 输出日志   -->
            <!-- 单个日志文件最大值为 10MB ,超出则在尾部追加索引 如 : 2021-03-06_0.log 2021-03-06_1.log -->
            <log-file-path>AppRoot:logs</log-file-path>
            <!-- 全局日志输出级别 ERROR, WARN, INFO, DEBUG, TRACE -->
            <!--  其他需要详细配置的类的输出级别 -->
            <levels root="DEBUG">
                <!-- name 为类的具体名称值为级别 -->
                <level name="xxx.xxx.xxx">DEBUG</level>
                <level name="xxx.xxx.xxx">ERROR</level>
            </levels>
        </log>
        <!-- 允许的访问源 (用来控制跨域) -->
        <allowed-origin>*</allowed-origin>
        <!-- 数据库数据是否使用 墓碑机制 (逻辑删除) -->
        <tombstone>false</tombstone>
        <!-- 关闭的插件 -->
        <disabled-plugins>
            <!-- 示例 -->
            <!--  <disabled-plugin>aaa-123.jar</disabled-plugin> -->
            <!--  <disabled-plugin>bbb-456.jar</disabled-plugin> -->
            <disabled-plugin/>
        </disabled-plugins>
        <!-- 数据源 目前只支持 mysql 数据库 -->
        <data-source>
            <!-- 数据库地址 -->
            <host>127.0.0.1</host>
            <!-- 端口号 -->
            <port>3306</port>
            <!-- 默认数据库 -->
            <database>scx</database>
            <!-- 连接用户名 -->
            <username>root</username>
            <!-- 连接密码 (此处为加密后的) -->
            <password>OgaIGDNXuGHN8riHCTVsgeSro4o2IVY/wTU3+467XCYkdDT2bkoJROBhGOTcA3Z0</password>
            <!-- 数据库连接的其他参数 -->
            <parameters>
                <!-- 允许多条查询 -->
                <parameter>allowMultiQueries=true</parameter>
                <!-- 重写批处理语句 (开启此项会是数据库批量处理性能大幅提高) -->
                <parameter>rewriteBatchedStatements=true</parameter>
            </parameters>
        </data-source>
        <!-- 有关 https -->
        <https>
            <is-open>false</is-open>
            <!-- ssl 证书位置 -->
            <ssl-path>AppRoot:ssl\scx_dev.jks</ssl-path>
            <!-- ssl 证书密码 (此处为加密后的) -->
            <ssl-password>k8s6nDQxC5zCfUYChf1tRLwriOw66th8egQomJLwjnXJBE5aqgSSz5a2/vcV4zqZ</ssl-password>
        </https>
        <!-- 模板参数 -->
        <template>
            <!-- 模板根目录 -->
            <root>AppRoot:c</root>
            <!-- 模板引用静态文件路径 -->
            <resource-root>AppRoot:c\static</resource-root>
            <!-- 模板引用 http 路径 -->
            <resource-http-url>/static/*</resource-http-url>
        </template>
    </scx>
    <!-- 以下为各个模块的 配置文件 -->
    <!-- 有关发送消息的配置文件  -->
    <message>
        <!-- 云通讯(一个第三方短信服务商) 的各种 key -->
        <ytx-account-sid>xxx</ytx-account-sid>
        <ytx-auth-token>xxx</ytx-auth-token>
        <ytx-app-id>xxx</ytx-app-id>
    </message>
    <!-- 文件存储服务 -->
    <fss>
        <physical-file-path>C:\Users\public\Documents\scxFiles</physical-file-path>
    </fss>
    <!-- 默认组织机构的配置文件 -->
    <organization>
        <!-- 是否混淆登录错误 -->
        <!-- 为 false 时, 当用户名或密码错误时,是否详细提示用户是 " 用户未找到" 还是 " 密码错误 "-->
        <!-- 为 true  时, 则一律显示 用户名或密码错误 -->
        <confusion-login-error>false</confusion-login-error>
    </organization>
</scx-config>
